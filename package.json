{
  "name": "echo-effect",
  "type": "module",
  "version": "0.0.12",
  "packageManager": "pnpm@9.15.9",
  "description": "`EchoEffect` is a powerful dependency impact analysis tool designed for the entire frontend ecosystem. It helps developers understand the ripple effects of code changes across their projects by mapping and analyzing dependency chains.",
  "author": "huali <zcf0508@live.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/zcf0508/echo-effect#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zcf0508/echo-effect.git"
  },
  "bugs": "https://github.com/zcf0508/echo-effect/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "echo-effect": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:",
    "@clack/prompts": "catalog:",
    "@vue/compiler-dom": "catalog:",
    "@vue/compiler-sfc": "catalog:",
    "chalk": "catalog:",
    "commander": "catalog:",
    "commondir": "catalog:",
    "consola": "catalog:cli",
    "debug": "catalog:",
    "local-pkg": "catalog:",
    "ora": "catalog:",
    "pluralize": "catalog:",
    "pretty-ms": "catalog:",
    "rc": "catalog:",
    "stream-to-array": "catalog:",
    "tree-sitter": "catalog:",
    "tree-sitter-javascript": "catalog:",
    "tree-sitter-typescript": "catalog:",
    "ts-graphviz": "catalog:",
    "tsconfig-paths": "catalog:",
    "typescript": "catalog:cli",
    "walkdir": "catalog:"
  },
  "optionalDependencies": {
    "tree-sitter-cpp": "0.23.4",
    "tree-sitter-go": "0.25.0",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-python": "^0.25.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
